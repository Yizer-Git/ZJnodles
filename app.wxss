@import "styles/design-system.wxss";

page {
  background-color: #fbf7f0;
  color: #333333;
}

.page {
  background-color: transparent;
  padding: 48rpx 32rpx 120rpx;
}


.surface-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.surface-card--frosted {
  backdrop-filter: blur(12rpx);
  background: rgba(255, 255, 255, 0.9);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

.surface-card--accent {
  background: linear-gradient(135deg, #e6d6c0, #ddc4a2);
  color: #333333;
  box-shadow: 0 32rpx 80rpx rgba(204, 181, 156, 0.35);
}

.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.section-header .meta {
  flex: 1;
  min-width: 0;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  letter-spacing: 0.5rpx;
  color: #333333;
}

.section-subtitle {
  display: block;
  margin-top: 8rpx;
  color: #888888;
  font-size: 24rpx;
}

.section-action {
  font-size: 26rpx;
  color: #c2a88a;
  font-weight: 500;
}

.section-action:active {
  opacity: 0.65;
}

.stat-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 20rpx;
}

.stat-card {
  border-radius: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.94);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  text-align: left;
}

.stat-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #c2a88a;
}

.stat-label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
}

.pill-btn,
.ds-pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  height: 68rpx;
  line-height: 1;
  font-size: 26rpx;
  text-align: center;
  font-weight: 500;
  padding: 0 32rpx;
  box-sizing: border-box;
}

button.pill-btn,
button.ds-pill {
  padding: 0 32rpx;
}

button.pill-btn[size='mini'],
button.ds-pill[size='mini'] {
  height: 56rpx;
  min-height: 56rpx;
}

button.pill-btn::after,
button.ds-pill::after {
  display: none;
}

.pill-btn--primary,
.ds-pill--primary {
  background: linear-gradient(135deg, #d8c4ab, #c2a88a);
  color: #fff9f1;
  box-shadow: 0 16rpx 40rpx rgba(194, 168, 138, 0.32);
}

.pill-btn--accent {
  background: linear-gradient(135deg, rgba(220, 181, 139, 0.92), rgba(201, 143, 99, 0.92));
  color: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(220, 181, 139, 0.92);
}

.tag,
.ds-chip {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 999rpx;
  background: #e6ded5;
  color: #333333;
}

.surface-chip,
.ds-chip--ghost {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.05);
  color: #475467;
  font-size: 24rpx;
  transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease;
}

.chips,
.hero-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.divider {
  height: 1rpx;
  background: linear-gradient(
    90deg,
    rgba(148, 163, 184, 0),
    rgba(148, 163, 184, 0.6),
    rgba(148, 163, 184, 0)
  );
  margin: 32rpx 0;
}

.text-muted {
  color: #888888;
}

.text-success {
  color: #a5b4a1;
}

.text-warning {
  color: #ff6f61;
}

.text-error {
  color: #ff6f61;
}

.shimmer,
.ds-shimmer {
  background: linear-gradient(90deg, #f0f4f8 0%, #e2e8f0 50%, #f0f4f8 100%);
  background-size: 400% 400%;
  animation: shimmer-animation 1.4s infinite;
}

@keyframes shimmer-animation {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

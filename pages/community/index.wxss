.community-page {
  padding: 48rpx 32rpx 120rpx;
  background: transparent;
  min-height: 100vh;
  box-sizing: border-box;
}

.profile-card {
  color: #ffffff;
  margin-bottom: 48rpx;
  box-shadow: none;
}

.profile-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}

.profile-meta {
  margin-left: 24rpx;
}

.nickname {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}

.level {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.profile-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.stat {
  flex: 1;
  text-align: center;
}

.stat-number {
  font-size: 34rpx;
  font-weight: 700;
  color: #00bcd4;
}

.stat-label {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.checkin-btn {
  margin-top: 28rpx;
  color: #00bcd4;
  border: none;
}

.community-page .ds-section__header {
  margin-bottom: 20rpx;
}

.task-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: none;
}

.task-card.skeleton {
  height: 140rpx;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.task-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.task-meta {
  text-align: right;
  margin-left: 24rpx;
}

.task-points {
  font-size: 26rpx;
  color: #ff6f61;
  font-weight: 600;
}

.task-status {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

.feed-card {
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: none;
}

.feed-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.feed-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 16rpx;
  background: rgba(148, 163, 184, 0.15);
}

.feed-author {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.feed-time {
  display: block;
  font-size: 22rpx;
  color: #999999;
}

.feed-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.feed-images {
  margin: 16rpx 0;
  white-space: nowrap;
}

.feed-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 14rpx;
  margin-right: 16rpx;
  background: #f3f3f3;
}

.feed-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  font-size: 24rpx;
  color: #00bcd4;
}

.mall-scroll {
  white-space: nowrap;
}

.mall-item {
  display: inline-flex;
  flex-direction: column;
  width: 260rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  box-shadow: none;
}

.mall-cover {
  width: 100%;
  height: 200rpx;
  border-radius: 18rpx;
  background: #e2e8f0;
}

.mall-title {
  font-size: 26rpx;
  color: #333333;
  margin-top: 12rpx;
}

.mall-points {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ff6f61;
  font-weight: 600;
}

.empty {
  padding: 80rpx 24rpx;
  text-align: center;
  color: #999999;
  box-shadow: none;
}

.task-sheet {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 40;
}

.sheet-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
}

.sheet-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 36rpx 56rpx;
  box-shadow: none;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.sheet-desc {
  display: block;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.sheet-meta {
  display: flex;
  justify-content: space-between;
  margin: 24rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.sheet-confirm {
  width: 100%;
  border: none;
}

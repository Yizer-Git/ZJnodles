.community-page {
  padding: 48rpx 32rpx 120rpx;
  background: transparent;
  min-height: 100vh;
  box-sizing: border-box;
}

.profile-card {
  color: #ffffff;
  margin-bottom: 48rpx;
  box-shadow: none;
}

.profile-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}

.profile-meta {
  margin-left: 24rpx;
}

.nickname {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}

.level {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.profile-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}

.stat {
  flex: 1;
  text-align: center;
}

.stat-number {
  font-size: 34rpx;
  font-weight: 700;
  color: #c2a88a;
}

.stat-label {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.checkin-btn {
  margin-top: 28rpx;
  color: #c2a88a;
  border: none;
}

.community-page .ds-section__header {
  margin-bottom: 20rpx;
}

.task-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: none;
}

.task-card.skeleton {
  height: 140rpx;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.task-desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.task-meta {
  text-align: right;
  margin-left: 24rpx;
}

.task-points {
  font-size: 26rpx;
  color: #ff6f61;
  font-weight: 600;
}

.task-status {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

.sub-tabs {
  display: flex;
  gap: 20rpx;
  margin: 24rpx 0 40rpx;
}

.sub-tab-item {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #667085;
  background: rgba(194, 168, 138, 0.18);
  transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease;
}

.sub-tab-item.active {
  background: linear-gradient(135deg, #d8c4ab, #c2a88a);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(194, 168, 138, 0.28);
}

.feed-card-large {
  margin-bottom: 32rpx;
  padding: 0;
  overflow: hidden;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.06);
}

.feed-cover-lg {
  width: 100%;
  height: 480rpx;
  object-fit: cover;
  border-radius: 24rpx 24rpx 0 0;
}

.feed-meta-content {
  padding: 28rpx 32rpx 32rpx;
  display: grid;
  gap: 12rpx;
}

.feed-meta-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.feed-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.feed-tag-new {
  background: rgba(255, 111, 97, 0.1);
  color: #ff6f61;
}

.feed-time {
  font-size: 22rpx;
  color: #999999;
}

.feed-title-lg {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.34;
}

.feed-subtitle-lg {
  font-size: 26rpx;
  color: #667085;
  line-height: 1.6;
}

.feed-actions-lg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  gap: 24rpx;
}

.feed-author-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.feed-avatar-sm {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #e2e8f0;
}

.feed-author-text {
  display: grid;
  gap: 4rpx;
}

.feed-author {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.feed-author-role {
  font-size: 22rpx;
  color: #999999;
}

.feed-stats {
  display: flex;
  align-items: center;
  gap: 32rpx;
  font-size: 24rpx;
  color: #999999;
}

.feed-stat-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.feed-stat-icon {
  font-size: 24rpx;
}

.feed-stat-value {
  font-size: 24rpx;
  color: inherit;
}

.mall-scroll {
  white-space: nowrap;
}

.mall-item {
  display: inline-flex;
  flex-direction: column;
  width: 260rpx;
  margin-right: 20rpx;
  padding: 20rpx;
  box-shadow: none;
}

.mall-cover {
  width: 100%;
  height: 200rpx;
  border-radius: 18rpx;
  background: #e2e8f0;
}

.mall-title {
  font-size: 26rpx;
  color: #333333;
  margin-top: 12rpx;
}

.mall-points {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #ff6f61;
  font-weight: 600;
}

.empty {
  padding: 80rpx 24rpx;
  text-align: center;
  color: #999999;
  box-shadow: none;
}

.task-sheet {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 40;
}

.sheet-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
}

.sheet-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 36rpx 56rpx;
  box-shadow: none;
}

.sheet-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.sheet-desc {
  display: block;
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.sheet-meta {
  display: flex;
  justify-content: space-between;
  margin: 24rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.sheet-confirm {
  width: 100%;
  border: none;
}

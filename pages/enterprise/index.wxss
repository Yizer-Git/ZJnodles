.page {
  padding: 48rpx 32rpx 120rpx;
  background: transparent;
  min-height: 100vh;
  box-sizing: border-box;
}

.profile-card {
  margin-bottom: 48rpx;
  box-shadow: none;
}

.profile-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 16rpx;
}

.profile-line {
  display: block;
  font-size: 26rpx;
  color: rgba(15, 23, 42, 0.82);
  margin-bottom: 8rpx;
}

.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.section-subtitle {
  font-size: 24rpx;
  color: #667085;
  margin-top: 8rpx;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 32rpx;
  box-shadow: none;
}

.input,
.textarea {
  border-radius: 18rpx;
  padding: 24rpx;
  background: rgba(248, 250, 252, 0.9);
  font-size: 26rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.8);
}

.input:focus,
.textarea:focus {
  border-color: rgba(37, 99, 235, 0.6);
}

.textarea {
  min-height: 180rpx;
}

.submit {
  width: 100%;
  border: none;
}

.empty {
  padding: 72rpx 24rpx;
  text-align: center;
  color: #64748b;
  box-shadow: none;
}

.require-card,
.contract-card,
.invoice-card {
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: none;
}

.require-title,
.contract-title,
.invoice-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
}

.require-desc,
.contract-desc {
  margin: 12rpx 0;
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.require-meta,
.contract-meta,
.invoice-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #667085;
  margin-top: 16rpx;
}

.invoice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.invoice-amount {
  font-size: 30rpx;
  color: #2563eb;
  font-weight: 600;
}

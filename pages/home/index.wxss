.home-page {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
  padding: 0 32rpx 120rpx;
}

.home-search {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 28rpx;
  box-shadow: none;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 188, 212, 0.12);
  font-size: 24rpx;
}

.search-placeholder {
  flex: 1;
  color: #999999;
  font-size: 26rpx;
}

.home-banner {
  height: 360rpx;
  margin: 0 -32rpx;
  padding: 0 32rpx;
  border-radius: 0 0 40rpx 40rpx;
  background: linear-gradient(135deg, #00bcd4, #00a3b5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-content {
  max-width: 640rpx;
  display: grid;
  gap: 16rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
}

.banner-eyebrow {
  font-size: 22rpx;
  letter-spacing: 6rpx;
  opacity: 0.85;
}

.banner-title {
  font-size: 42rpx;
  font-weight: 700;
  line-height: 1.2;
  color: #ffffff;
}

.banner-subtitle {
  font-size: 26rpx;
  line-height: 1.7;
}

.main-actions {
  margin-top: -140rpx;
  padding: 0;
  position: relative;
  z-index: 5;
}

.actions-card {
  padding: 32rpx;
}

.actions-header {
  margin-bottom: 24rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 0;
}

.action-icon {
  font-size: 48rpx;
  color: #333333;
}

.action-icon--primary {
  color: #00bcd4;
}

.action-icon--accent {
  color: #ff6f61;
}

.action-title {
  font-size: 26rpx;
  color: #333333;
}

.section-card {
  padding: 32rpx;
  box-shadow: none;
}

.section-card__header {
  display: grid;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.section-card__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.section-card__subtitle {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.gallery-scroll {
  display: flex;
  gap: 24rpx;
  padding-bottom: 16rpx;
}

.gallery-scroll::-webkit-scrollbar {
  display: none;
}

.gallery-card {
  flex: 0 0 260rpx;
  display: grid;
  gap: 12rpx;
}

.gallery-cover {
  width: 100%;
  height: 176rpx;
  border-radius: 24rpx;
  background: #cdeff5;
}

.gallery-label {
  font-size: 22rpx;
  color: #00bcd4;
}

.gallery-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
  line-height: 1.4;
}

.operation-card {
  margin-bottom: 24rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.operation-card:last-child {
  margin-bottom: 0;
}

.operation-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.operation-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.operation-status {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(0, 188, 212, 0.12);
  color: #0097a7;
}

.operation-status.offline {
  background: rgba(153, 170, 181, 0.18);
  color: #758194;
}

.operation-desc {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.recommend-scroll {
  display: flex;
  gap: 24rpx;
  padding-bottom: 16rpx;
}

.recommend-scroll::-webkit-scrollbar {
  display: none;
}

.recommend-card {
  flex: 0 0 300rpx;
  display: grid;
  gap: 12rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.recommend-cover {
  width: 100%;
  height: 220rpx;
  border-radius: 24rpx;
  background: #cdeff5;
}

.recommend-tags {
  display: flex;
  gap: 12rpx;
}

.recommend-label,
.recommend-note {
  font-size: 22rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
}

.recommend-label {
  background: rgba(0, 188, 212, 0.18);
  color: #0097a7;
}

.recommend-note {
  background: rgba(0, 188, 212, 0.12);
  color: #00bcd4;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.recommend-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.recommend-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6f61;
}

.card-more-btn {
  width: 100%;
  margin-top: 24rpx;
}

.content-card {
  margin-bottom: 24rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.content-card:last-child {
  margin-bottom: 0;
}

.content-category {
  font-size: 22rpx;
  color: #00bcd4;
}

.content-title {
  margin-top: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.5;
}

.content-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.campaign-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 50;
  padding: 0 32rpx;
}

.campaign-card {
  width: 620rpx;
  text-align: center;
  box-shadow: 0 32rpx 90rpx rgba(0, 188, 212, 0.28);
}

.campaign-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.campaign-desc {
  margin: 16rpx 0 24rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.campaign-close {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}

.fab-wrapper {
  position: fixed;
  right: 48rpx;
  bottom: calc(env(safe-area-inset-bottom) + 120rpx);
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6f61, #ff998c);
  box-shadow: 0 16rpx 40rpx rgba(255, 111, 97, 0.4);
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fab-icon {
  font-size: 56rpx;
  line-height: 1;
  color: #ffffff;
  font-weight: 300;
}

@media (max-width: 750px) {
  .home-banner {
    margin: 0 -24rpx;
    padding: 0 24rpx;
    border-radius: 0 0 32rpx 32rpx;
  }

  .actions-card {
    padding: 28rpx 24rpx;
  }

  .action-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .section-card {
    padding: 28rpx 24rpx;
  }
}

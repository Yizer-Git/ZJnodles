.home-page {
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 100%;
  overflow: hidden;
}

.home-page__bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.home-page__content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
  padding: 0 32rpx 120rpx;
}

.home-search {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 28rpx;
  box-shadow: none;
  background: #ffffff;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(201, 143, 99, 0.14);
  font-size: 24rpx;
}

.search-placeholder {
  flex: 1;
  color: #888888;
  font-size: 26rpx;
}

.search-icon-img {
  width: 48rpx;
  height: 48rpx;
}

.home-banner {
  position: relative;
  margin: 24rpx 0 0;
  padding: 0;
  border-radius: 0;
  box-shadow: none;
  overflow: visible;
}

.home-banner__image {
  width: 100%;
  height: auto;
  border-radius: 0;
  display: block;
}

.main-actions {
  margin-top: -140rpx;
  padding: 0;
  position: relative;
  z-index: 5;
}

.actions-card {
  padding: 32rpx;
}

.actions-header {
  margin-bottom: 24rpx;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 24rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 0;
}

.action-icon-img {
  width: 64rpx;
  height: 64rpx;
  padding: 12rpx;
  border-radius: 32rpx;
  background: rgba(194, 168, 138, 0.18);
}

.action-icon {
  font-size: 48rpx;
  color: #c2a88a;
}

.action-icon--primary {
  color: #c2a88a;
}

.action-icon--accent {
  color: #a5b4a1;
}

.action-title {
  font-size: 26rpx;
  color: #38220f;
}

.section-card {
  padding: 32rpx;
  box-shadow: none;
}

.section-card__header {
  display: grid;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.section-card__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.section-card__subtitle {
  font-size: 24rpx;
  color: #888888;
  line-height: 1.5;
}

.story-card {
  padding-bottom: 36rpx;
}

.sub-tabs {
  display: flex;
  gap: 20rpx;
  margin: 8rpx 0 32rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.sub-tabs::-webkit-scrollbar {
  display: none;
}

.sub-tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #333333;
  background: #e6ded5;
  border: 1rpx solid #d8cec4;
  transition: background 0.2s ease, color 0.2s ease, box-shadow 0.2s ease;
  flex-shrink: 0;
}

.sub-tab-item.active {
  background: #c2a88a;
  color: #fff9f1;
  box-shadow: 0 8rpx 20rpx rgba(194, 168, 138, 0.45);
  border-color: #b89876;
}

.feed-card-large {
  margin-bottom: 32rpx;
  padding: 0;
  overflow: hidden;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.06);
}

.feed-card-large:last-child {
  margin-bottom: 0;
}

.skeleton-story {
  height: 560rpx;
}

.feed-cover-lg {
  width: 100%;
  height: 480rpx;
  object-fit: cover;
  border-radius: 24rpx 24rpx 0 0;
}

.feed-meta-content {
  padding: 28rpx 32rpx 32rpx;
  display: grid;
  gap: 12rpx;
}

.feed-meta-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.feed-views {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.feed-views-count {
  font-size: 24rpx;
  color: #94a3b8;
}

.feed-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.feed-tag-new {
  background: rgba(255, 111, 97, 0.1);
  color: #ff6f61;
}

.feed-time {
  font-size: 22rpx;
  color: #94a3b8;
}

.feed-title-lg {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
  line-height: 1.34;
}

.feed-subtitle-lg {
  font-size: 26rpx;
  color: #475467;
  line-height: 1.6;
}

.feed-actions-lg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
  margin-top: 12rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(148, 163, 184, 0.12);
}

.feed-author-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.author-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #e2e8f0;
}

.feed-author-text {
  display: grid;
  gap: 4rpx;
}

.author-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
}

.author-title {
  font-size: 22rpx;
  color: #94a3b8;
}

.feed-stats {
  display: flex;
  align-items: center;
  gap: 28rpx;
  font-size: 24rpx;
  color: #94a3b8;
}

.feed-stat-item {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.feed-stat-icon {
  width: 28rpx;
  height: 28rpx;
}


.gallery-scroll {
  display: flex;
  gap: 24rpx;
  padding-bottom: 16rpx;
}

.gallery-scroll::-webkit-scrollbar {
  display: none;
}

.gallery-card {
  flex: 0 0 260rpx;
  display: grid;
  gap: 12rpx;
}

.gallery-cover {
  width: 100%;
  height: 176rpx;
  border-radius: 24rpx;
  background: #cdeff5;
}

.gallery-label {
  font-size: 22rpx;
  color: #00bcd4;
}

.gallery-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
  line-height: 1.4;
}

.operation-card {
  margin-bottom: 24rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.operation-card:last-child {
  margin-bottom: 0;
}

.operation-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.operation-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.operation-status {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(0, 188, 212, 0.12);
  color: #0097a7;
}

.operation-status.offline {
  background: rgba(153, 170, 181, 0.18);
  color: #758194;
}

.operation-desc {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.recommend-scroll {
  display: flex;
  gap: 24rpx;
  padding-bottom: 16rpx;
}

.recommend-scroll::-webkit-scrollbar {
  display: none;
}

.recommend-card {
  flex: 0 0 300rpx;
  display: grid;
  gap: 12rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.recommend-cover {
  width: 100%;
  height: 220rpx;
  border-radius: 24rpx;
  background: #cdeff5;
}

.recommend-tags {
  display: flex;
  gap: 12rpx;
}

.recommend-label,
.recommend-note {
  font-size: 22rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
}

.recommend-label {
  background: rgba(0, 188, 212, 0.18);
  color: #0097a7;
}

.recommend-note {
  background: rgba(0, 188, 212, 0.12);
  color: #00bcd4;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.recommend-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.recommend-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6f61;
}

.card-more-btn {
  width: 100%;
  margin-top: 24rpx;
}

.content-card {
  margin-bottom: 24rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.content-card:last-child {
  margin-bottom: 0;
}

.content-category {
  font-size: 22rpx;
  color: #00bcd4;
}

.content-title {
  margin-top: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.5;
}

.content-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.campaign-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 50;
  padding: 0 32rpx;
}

.campaign-card {
  width: 620rpx;
  text-align: center;
  box-shadow: 0 32rpx 90rpx rgba(0, 188, 212, 0.28);
}

.campaign-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.campaign-desc {
  margin: 16rpx 0 24rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.campaign-close {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}


@media (max-width: 750px) {
  .home-banner {
    margin: 24rpx 0 0;
    padding: 0;
    border-radius: 0;
  }

  .actions-card {
    padding: 28rpx 24rpx;
  }

  .action-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }

  .section-card {
    padding: 28rpx 24rpx;
  }
}

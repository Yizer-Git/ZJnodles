<view class="login-page">
  <image class="login-page__bg" mode="aspectFill" src="{{backgrounds.signup}}"></image>
  <view class="login-page__content">
  <view class="welcome-title">
    <text class="ds-title">欢迎来到中江挂面</text>
    <text class="ds-subtitle">非遗文化 · 数字服务平台</text>
  </view>

  <view class="login-form">
    <view class="input-group">
      <text class="input-label">账号</text>
      <input
        class="login-input"
        placeholder="手机号/用户名/邮箱"
        placeholder-class="placeholder-text"
        type="text"
        bindinput="handleAccountInput"
      />
    </view>

    <view class="input-group">
      <text class="input-label">密码</text>
      <input
        class="login-input"
        placeholder="请输入密码"
        placeholder-class="placeholder-text"
        password
        bindinput="handlePasswordInput"
      />
    </view>

    <button class="action-btn pill-btn pill-btn--primary" bindtap="handleLogin">登录</button>
    <button class="action-btn register-btn" bindtap="handleRegister">注册</button>
    <button class="action-btn guest-btn" bindtap="handleGuestLogin">游客登录</button>

    <view class="auxiliary-links">
      <text class="link" bindtap="handleQuickLink">忘记密码</text>
      <text class="link" bindtap="handleQuickLink">免密码登录</text>
    </view>
  </view>

  <view class="social-login">
    <text class="divider-text">其他登录方式</text>
    <view class="social-icons">
      <view class="social-icon" data-provider="wechat" bindtap="handleSocialLogin">
        <image
          class="social-icon__img"
          mode="aspectFit"
          src="/assets/images/icons/wechat.svg"
        ></image>
      </view>
      <view class="social-icon" data-provider="qq" bindtap="handleSocialLogin">
        <image
          class="social-icon__img"
          mode="aspectFit"
          src="/assets/images/icons/QQ.svg"
        ></image>
      </view>
    </view>
  </view>
  </view>
</view>

.login-page {
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;

}

.login-page__bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.login-page__content {
  position: relative;
  z-index: 1;
  padding: 120rpx 64rpx 80rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.welcome-title {
  margin-bottom: 120rpx;
}

.welcome-title .ds-title {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 12rpx;
}

.welcome-title .ds-subtitle {
  font-size: 28rpx;
  color: #999999;
}

.login-form {
  margin-bottom: 80rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  display: block;
  margin-bottom: 12rpx;
}

.login-input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 1rpx solid #999999;
  padding: 0;
  background: transparent;
}

.placeholder-text {
  color: #999999;
}

.action-btn {
  width: 100%;
  margin: 0 0 32rpx 0;
  border-radius: 24rpx;
  font-size: 34rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.register-btn {
  background: transparent;
  color: rgba(220, 181, 139, 0.92);
  border: 2rpx solid rgba(220, 181, 139, 0.92);
  box-shadow: none;
}

.guest-btn {
  background: #ffffff;
  color: #666666;
  box-shadow: none;
}

.auxiliary-links {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999999;
}

.link {
  padding: 8rpx;
}

.social-login {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 80rpx;
  text-align: center;
}

.divider-text {
  font-size: 24rpx;
  color: #332d2d;
  display: block;
  margin-bottom: 32rpx;
}

.social-icons {
  display: flex;
  justify-content: center;
  gap: 60rpx;

}

.social-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;

  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  
}

.social-icon__img {
  width: 56rpx;
  height: 56rpx;
  color: #ddb190;
}

@media (max-width: 750px) {
  .login-page__content {
    padding: 96rpx 48rpx 80rpx;
    
  }
}

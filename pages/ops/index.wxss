.page {
  padding: 48rpx 32rpx 120rpx;
  background: transparent;
  min-height: 100vh;
  box-sizing: border-box;
}

.dashboard-card {
  margin-bottom: 48rpx;
  color: #fff;
  box-shadow: none;
}

.dashboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
}

.metrics {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.metric {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.18);
}

.metric-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
}

.metric-label {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.section-subtitle {
  font-size: 24rpx;
  color: #667085;
  margin-top: 8rpx;
}

.empty {
  padding: 64rpx 24rpx;
  text-align: center;
  color: #64748b;
  box-shadow: none;
}

.slot-card,
.task-card,
.log-card {
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: none;
}

.slot-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.slot-info {
  max-width: 520rpx;
}

.slot-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.slot-desc {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #475467;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.task-desc {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #475467;
  line-height: 1.6;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #667085;
  margin-top: 16rpx;
}

.task-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.log-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.log-time {
  display: block;
  font-size: 22rpx;
  color: #94a3b8;
  margin: 8rpx 0;
}

.log-desc {
  font-size: 24rpx;
  color: #475467;
  line-height: 1.6;
}

.product-card {
  padding: 28rpx;
  margin-bottom: 20rpx;
  border-radius: 24rpx;
  box-shadow: none;
}

.product-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.product-trend {
  font-size: 24rpx;
  font-weight: 500;
}

.product-trend--up {
  color: #0f9d58;
}

.product-trend--down {
  color: #d93025;
}

.product-trend--flat {
  color: #64748b;
}

.product-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.product-note {
  font-size: 24rpx;
  color: #475467;
  line-height: 1.5;
}

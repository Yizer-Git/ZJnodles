.page {
  min-height: 100vh;
  background: transparent;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}

.header {
  font-size: 36rpx;
  font-weight: 600;
  color: #38220f;
  margin-bottom: 24rpx;
}

.state {
  text-align: center;
  color: #887b6a;
  padding: 60rpx 0;
  font-size: 26rpx;
}

.state.small {
  padding: 32rpx 0;
  font-size: 24rpx;
}

.order-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-id {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #6d5a49;
}

.order-id-label {
  font-size: 22rpx;
  color: #9c8f81;
  margin-bottom: 4rpx;
}

.order-id-value {
  font-size: 28rpx;
  font-weight: 600;
}

.order-status-pill {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 600;
  border: 1rpx solid transparent;
  background: #fdf6ec;
  color: #b7791f;
}

.status-pending {
  background: #fff7ed;
  color: #c2410c;
  border-color: rgba(194, 65, 12, 0.2);
}

.status-unpaid {
  background: #fff1f2;
  color: #db2777;
  border-color: rgba(219, 39, 119, 0.2);
}

.status-paid {
  background: #ecfdf5;
  color: #047857;
  border-color: rgba(4, 120, 87, 0.2);
}

.status-canceled {
  background: #f8fafc;
  color: #475569;
  border-color: rgba(71, 85, 105, 0.2);
}

.status-fulfilled {
  background: #f0fdf4;
  color: #15803d;
  border-color: rgba(21, 128, 61, 0.2);
}

.status-refunded {
  background: #eef2ff;
  color: #4338ca;
  border-color: rgba(67, 56, 202, 0.2);
}

.order-status-tip {
  font-size: 24rpx;
  color: #8c7a65;
  background: #f8f6f2;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.order-body {
  border-top: 1px solid #f0f2f5;
  border-bottom: 1px solid #f0f2f5;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
}

.order-body-header {
  font-size: 24rpx;
  color: #9c8f81;
  margin-bottom: 12rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #38220f;
  margin-bottom: 12rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item-info {
  display: flex;
  flex-direction: column;
}

.order-item-title {
  max-width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-item-price {
  font-size: 24rpx;
  color: #a37d5b;
  margin-top: 4rpx;
}

.order-item-qty {
  color: #887b6a;
}

.order-address {
  background: #fcfbf8;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
  border: 1rpx dashed rgba(148, 163, 184, 0.3);
}

.order-recipient {
  font-size: 24rpx;
  color: #6d5a49;
  margin-bottom: 8rpx;
}

.order-address-line {
  font-size: 24rpx;
  color: #9c8f81;
  line-height: 1.4;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total-wrap {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.order-total-label {
  font-size: 24rpx;
  color: #887b6a;
}

.order-total {
  font-size: 28rpx;
  font-weight: 600;
  color: #d4380d;
}

.order-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.order-time {
  font-size: 24rpx;
  color: #887b6a;
}

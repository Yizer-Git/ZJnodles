.page {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}

.header {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.state {
  text-align: center;
  color: #8c8c8c;
  padding: 60rpx 0;
  font-size: 26rpx;
}

.state.small {
  padding: 32rpx 0;
  font-size: 24rpx;
}

.order-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-id {
  font-size: 26rpx;
  color: #666666;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
  color: #00bcd4;
}

.order-body {
  border-top: 1px solid #f0f2f5;
  border-bottom: 1px solid #f0f2f5;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item-title {
  max-width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-item-qty {
  color: #999999;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6f61;
}

.order-time {
  font-size: 24rpx;
  color: #999999;
}

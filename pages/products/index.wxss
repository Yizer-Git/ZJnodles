.products-page {
  display: grid;
  gap: 36rpx;
  padding: 48rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 12rpx;
  box-shadow: 0 24rpx 72rpx rgba(0, 188, 212, 0.24);
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #ffffff;
}

.subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.filters {
  white-space: nowrap;
  padding: 18rpx 20rpx;
  box-shadow: none;
  display: flex;
  gap: 16rpx;
}

.filter-item {
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 18rpx 26rpx;
  border-radius: 24rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
  min-width: 180rpx;
  background: rgba(255, 255, 255, 0.9);
}

.filter-item.active {
  background: rgba(0, 188, 212, 0.16);
  border-color: rgba(0, 188, 212, 0.4);
}

.filter-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

.filter-tip {
  font-size: 20rpx;
  color: #999999;
  margin-top: 6rpx;
}

.section-action {
  font-size: 26rpx;
  color: #00bcd4;
}

.bundle-card {
  margin-bottom: 20rpx;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.bundle-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.bundle-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.bundle-notes {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.bundle-badge {
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(0, 188, 212, 0.16);
  color: #0097a7;
}

.bundle-badge--green {
  background: rgba(0, 163, 181, 0.14);
  color: #00a3b5;
}

.bundle-items {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999999;
}

.bundle-footer {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-top: 18rpx;
}

.bundle-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #ff6f61;
}

.bundle-original {
  font-size: 22rpx;
  color: #999999;
  text-decoration: line-through;
}

.bundle-saving {
  font-size: 22rpx;
  color: #ff6f61;
}

.checkout-btn {
  border: none;
  padding: 0 24rpx;
}

.state {
  text-align: center;
  color: #999999;
  padding: 64rpx 0;
  font-size: 26rpx;
  box-shadow: none;
}

.list {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 28rpx;
}

.card {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.cover {
  width: 100%;
  height: 280rpx;
  object-fit: cover;
  background: #e2f7fb;
}

.heritage-strip {
  display: flex;
  gap: 16rpx;
  padding: 12rpx 24rpx 0;
}

.heritage-note {
  font-size: 20rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(0, 188, 212, 0.18);
  color: #0097a7;
}

.heritage-note--green {
  background: rgba(0, 163, 181, 0.16);
  color: #00a3b5;
}

.info {
  padding: 20rpx 24rpx 28rpx;
  display: grid;
  gap: 12rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(0, 188, 212, 0.12);
  color: #00bcd4;
  font-size: 20rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}

.price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  color: #ff6f61;
}

.price-value {
  font-size: 34rpx;
  font-weight: 600;
}

.price-hint {
  font-size: 22rpx;
  color: #999999;
}

.add-btn {
  border: none;
  padding: 0 32rpx;
}

.logistics {
  box-shadow: none;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.logistics-item + .logistics-item {
  margin-top: 20rpx;
  border-top: 1rpx dashed rgba(148, 163, 184, 0.3);
  padding-top: 20rpx;
}

.logistics-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

.logistics-value {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

@media (max-width: 750px) {
  .list {
    grid-template-columns: 1fr;
  }
}

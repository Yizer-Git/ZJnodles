.products-page {
  display: grid;
  gap: 36rpx;
  padding: 48rpx 32rpx 120rpx;
  box-sizing: border-box;
  background: #fbf7f0;
}

.products-banner {
  overflow: hidden;
  padding: 0;
  border-radius: 10rpx;
}

.products-banner__swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.products-banner__image {
  width: 100%;
  height: 100%;
  display: block;
}

.header {
  margin-bottom: 12rpx;
  box-shadow: 0 24rpx 60rpx rgba(204, 181, 156, 0.35);
  background: linear-gradient(135deg, #e6d6c0, #ddc4a2);
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333333;
}

.subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  padding: 10rpx 8rpx 14rpx 2rpx; 
}

.products-content {
  display: grid;
  gap: 36rpx;
  width: 100%;
  max-width: 686rpx;
  margin: 0 auto;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.filters {
  padding: 20rpx 14rpx;
  box-sizing: border-box;
  box-shadow: none;
  overflow: hidden;
  background: #ffffff;
  border-radius: 20rpx;
  border: 1rpx solid #e5dcd2;

}

.filters-track {
  display: inline-flex;
  gap: 17rpx;
  white-space: normal;
  min-width: 100%;
}

.filter-item {
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 20rpx 20rpx;
  border-radius: 15rpx;
  border: 1rpx solid #f1bb84;
  min-width: 160rpx;
  background: #ffffff;
  flex-shrink: 0;
}

.filter-item.active {
 
  background: rgba(231, 193, 152, 0.8);
  border-color: #ecbc88;
  box-shadow: 0 18rpx 48rpx rgba(194, 168, 138, 0.28);
}

.filter-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

.filter-item.active .filter-label {
  color: #fff9f1;
}

.filter-tip {
  font-size: 20rpx;
  color: #888888;
  margin-top: 6rpx;
}

.filter-item.active .filter-tip {
  color: #fbf7f0;
}

.section-action {
  font-size: 26rpx;
  color: #c2a88a;
}

.bundle-card {
  margin-bottom: 20rpx;
  box-shadow: none;
  border: 1rpx solid #e5dcd2;
  background: #ffffff;
}

.bundle-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.bundle-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.bundle-notes {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.bundle-badge {
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: #e6ded5;
  color: #333333;
}

.bundle-badge--green {
  background: #a5b4a1;
  color: #f5f6f4;
}

.bundle-items {
  display: block;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #888888;
}

.bundle-footer {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-top: 18rpx;
  flex-wrap: wrap;
}

.bundle-price {
  font-size: 34rpx;
  font-weight: 600;
  color: #8c5f3f;
}

.bundle-original {
  font-size: 22rpx;
  color: #b79e90;
  text-decoration: line-through;
}

.bundle-saving {
  font-size: 22rpx;
  color: #a5b4a1;
}

.checkout-btn {
  border: none;
  padding: 0 48rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.primary-cta {
  margin-top: 28rpx;
  display: flex;
  justify-content: flex-end;
}

.state {
  text-align: center;
  color: #888888;
  padding: 64rpx 0;
  font-size: 26rpx;
  box-shadow: none;
}

.list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320rpx, 1fr));
  gap: 28rpx;
  width: 100%;
}

.card {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: none;
  border: 1rpx solid #e5dcd2;
  background: #ffffff;
  box-sizing: border-box;
}

.cover-wrapper {
  position: relative;
  width: 100%;
  padding-top: 56.25%;
  background: #f1ece4;
  overflow: hidden;
}

.cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.heritage-strip {
  display: flex;
  gap: 16rpx;
  padding: 12rpx 24rpx 0;
}

.heritage-note {
  font-size: 20rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: #c2a88a;
  color: #fff9f1;
}

.heritage-note--green {
  background: #a5b4a1;
  color: #f5f6f4;
}

.info {
  padding: 20rpx 24rpx 28rpx;
  display: grid;
  gap: 12rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1.4;
}

.card-subtitle {
  font-size: 24rpx;
  color: #888888;
  line-height: 1.5;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 4rpx;
}

.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-height: 36rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  background: #e6ded5;
  color: #333333;
  font-size: 22rpx;
  line-height: 1;
}

.tag--primary {
  background: linear-gradient(135deg, #d8c4ab, #c2a88a);
  color: #fff9f1;
  box-shadow: 0 12rpx 28rpx rgba(194, 168, 138, 0.28);
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  gap: 16rpx;
}

.price {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
  color: #8c5f3f;
}

.price-value {
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.price-hint {
  font-size: 24rpx;
  color: #888888;
}

.add-btn {
  border: none;
  padding: 0 40rpx;
  height: 68rpx;
  min-height: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  background: linear-gradient(135deg, #d8c4ab, #c2a88a);
  color: #fff9f1;
  box-shadow: 0 18rpx 40rpx rgba(194, 168, 138, 0.28);
}

.logistics {
  box-shadow: none;
  border: 1rpx solid #e5dcd2;
}

.logistics-item + .logistics-item {
  margin-top: 20rpx;
  border-top: 1rpx dashed rgba(148, 163, 184, 0.3);
  padding-top: 20rpx;
}

.logistics-label {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
}

.logistics-value {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
}

@media (max-width: 750px) {
  .list {
    grid-template-columns: 1fr;
  }
}

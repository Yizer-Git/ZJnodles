.settings-page {
  min-height: 100vh;
  padding: 48rpx 40rpx 160rpx;
  background-color: transparent;
  box-sizing: border-box;
}

.settings-page .settings-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.settings-section + .settings-section {
  margin-top: 72rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 2rpx;
  margin-bottom: 0;
}

.settings-list {
  display: grid;
  row-gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  min-height: 112rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  background: #ffffff;
  border-radius: 28rpx;
  border: 1rpx solid rgba(201, 143, 99, 0.12);
  transition: transform 120ms ease, background 120ms ease, border-color 120ms ease;
}

.item-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 24rpx;
  text-align: center;
  margin-right: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(220, 181, 139, 0.18);
  border: 1rpx solid rgba(201, 143, 99, 0.22);
}

.item-icon-img {
  width: 48rpx;
  height: 48rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-title {
  font-size: 30rpx;
  color: #1f2933;
  line-height: 1.36;
}

.item-desc {
  font-size: 24rpx;
  color: #888888;
  margin-top: 4rpx;
}

.item-arrow {
  font-size: 36rpx;
  color: rgba(60, 65, 75, 0.35);
  margin-left: 12rpx;
}

.item-switch {
  transform: scale(0.9);
}

.setting-item:active {
  transform: translateY(4rpx);
  background: rgba(220, 181, 139, 0.18);
  border-color: rgba(201, 143, 99, 0.28);
}

.logout-btn {
  margin-top: 120rpx;
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 34rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #dcb58b, #c98f63);
  color: #fff8ed;
  box-shadow: 0 24rpx 40rpx rgba(201, 143, 99, 0.24);
}

.item-icon--profile {
  background: linear-gradient(135deg, rgba(220, 181, 139, 0.35), rgba(201, 143, 99, 0.25));
}

.item-icon--security {
  background: linear-gradient(135deg, rgba(145, 122, 96, 0.32), rgba(108, 85, 63, 0.24));
}

.item-icon--phone {
  background: linear-gradient(135deg, rgba(220, 181, 139, 0.24), rgba(201, 143, 99, 0.18));
}

.item-icon--notify {
  background: linear-gradient(135deg, rgba(201, 143, 99, 0.22), rgba(153, 120, 84, 0.22));
}

.item-icon--gift {
  background: linear-gradient(135deg, rgba(205, 160, 110, 0.32), rgba(186, 133, 82, 0.28));
}

.item-icon--location {
  background: linear-gradient(135deg, rgba(196, 150, 108, 0.32), rgba(168, 120, 76, 0.26));
}

.item-icon--invoice {
  background: linear-gradient(135deg, rgba(186, 153, 123, 0.28), rgba(148, 119, 93, 0.24));
}

.item-icon--support {
  background: linear-gradient(135deg, rgba(220, 181, 139, 0.22), rgba(184, 138, 96, 0.26));
}

.page {
  padding: 48rpx 32rpx 120rpx;
  background: linear-gradient(160deg, #f8f1e7 0%, #fefcf8 40%, #f3ebe0 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding: 36rpx;
  color: #45220c;
  margin-bottom: 48rpx;
  box-shadow: 0 24rpx 60rpx rgba(176, 140, 97, 0.18);
  background: linear-gradient(135deg, rgba(214, 174, 129, 0.95), rgba(239, 209, 170, 0.9));
}

.header-text {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.header-badge {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.28);
  color: #45220c;
  font-size: 22rpx;
  letter-spacing: 2rpx;
}

.badge-icon {
  font-size: 24rpx;
}

.badge-label {
  font-weight: 600;
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(69, 34, 12, 0.85);
}

.date-picker {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 18rpx 28rpx;
  font-size: 26rpx;
  color: #45220c;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.34);
  box-shadow: inset 0 0 0 1rpx rgba(255, 255, 255, 0.45);
}

.arrow {
  margin-left: 12rpx;
}

.section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #3a2f23;
}

.section-subtitle {
  font-size: 24rpx;
  color: #89745b;
  margin-top: 8rpx;
}

.session-card {
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 0.92);
  box-shadow: 0 18rpx 45rpx rgba(198, 176, 142, 0.16);
  border: 1rpx solid rgba(222, 200, 166, 0.4);
  backdrop-filter: blur(6rpx);
}

.session-card.skeleton {
  height: 180rpx;
}

.session-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #81654a;
}

.session-tags {
  display: flex;
  gap: 12rpx;
}

.session-chip {
  padding: 4rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: rgba(227, 211, 184, 0.28);
  color: #765c3b;
}

.session-chip--status {
  background: rgba(190, 160, 120, 0.24);
  color: #6f4b23;
}

.session-chip--location {
  background: rgba(255, 255, 255, 0.55);
  color: #7c6a4e;
  border: 1rpx solid rgba(210, 190, 150, 0.4);
}

.session-title {
  margin-top: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #2f2416;
  line-height: 1.4;
}

.session-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #5f513f;
  line-height: 1.7;
}

/* 新增：包裹标题与描述，确保内容另起一行并有合适间距 */
.session-body {
  display: block;
  margin-top: 12rpx;
}

.session-body .session-title {
  display: block;
  margin-top: 0;
}

.session-body .session-desc {
  display: block;
  margin-top: 12rpx;
}

.session-meta {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  gap: 12rpx;
  font-size: 24rpx;
  color: #765c3b;
  margin-top: 20rpx;
}

.meta-label {
  font-weight: 600;
  letter-spacing: 2rpx;
}

.meta-value {
  font-size: 30rpx;
  font-weight: 700;
}

.session-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 28rpx;
}

.session-actions .pill-btn--ghost {
  border: none;
  background: rgba(245, 236, 222, 0.88);
  color: #7c5c37;
}

.session-actions .pill-btn--primary {
  background: linear-gradient(135deg, #c99a64, #b27a45);
  border: none;
  box-shadow: 0 10rpx 30rpx rgba(178, 122, 69, 0.35);
}

.empty {
  padding: 80rpx 24rpx;
  text-align: center;
  color: #89745b;
  box-shadow: none;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 24rpx;
  border: 1rpx dashed rgba(210, 190, 150, 0.6);
}

.notice-card {
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 16rpx 35rpx rgba(198, 176, 142, 0.18);
  border: 1rpx solid rgba(214, 192, 157, 0.55);
  background: rgba(255, 255, 255, 0.9);
}

.notice-head {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 12rpx;
}

.notice-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #3a2f23;
}

.notice-time {
  display: block;
  font-size: 24rpx;
  color: #9c8562;
}

.notice-content {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #5f513f;
  line-height: 1.6;
}

.certificate-toast {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  padding: 32rpx;
  box-sizing: border-box;
}

.toast-content {
  width: 100%;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  text-align: center;
  box-shadow: none;
  background: rgba(255, 255, 255, 0.92);
}

.toast-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #3a2f23;
}

.toast-desc {
  display: block;
  margin: 16rpx 0 24rpx;
  font-size: 24rpx;
  color: #5f513f;
  line-height: 1.6;
}

.toast-btn {
  width: 100%;
  border: none;
  background: linear-gradient(135deg, #c99a64, #b27a45);
  box-shadow: 0 12rpx 30rpx rgba(178, 122, 69, 0.35);
}

.toast-close {
  display: block;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #9c8562;
}

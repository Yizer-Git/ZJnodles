.page {
  padding: 48rpx 32rpx 120rpx;
  min-height: 100vh;
  background: transparent;
  box-sizing: border-box;
}

.header {
  margin-bottom: 36rpx;
  box-shadow: none;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #475467;
}

.search-bar {
  display: flex;
  gap: 12rpx;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: none;
}

.search-input {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  padding: 0 24rpx;
  border-radius: 34rpx;
  background: rgba(15, 23, 42, 0.04);
  color: #0f172a;
}

.state {
  text-align: center;
  color: #475467;
  padding: 60rpx 0;
  box-shadow: none;
}

.result-card {
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: none;
}

.result-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #475467;
}

.label {
  font-weight: 600;
}

.value {
  color: #0f172a;
}

.status {
  color: #16a34a;
}

.section {
  margin-top: 28rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.empty {
  display: block;
  padding: 32rpx;
  border-radius: 20rpx;
  color: #64748b;
  box-shadow: none;
}

.report-item,
.chain-item {
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: none;
}

.report-title {
  font-size: 26rpx;
  color: #0f172a;
  font-weight: 600;
}

.report-result {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #0f766e;
}

.report-time,
.hash,
.node,
.time {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #64748b;
}

.feedback-btn {
  margin-top: 24rpx;
  width: 100%;
  border: none;
}

.placeholder {
  margin-top: 48rpx;
  text-align: center;
  color: #94a3b8;
  font-size: 26rpx;
}

.sample-section {
  margin-top: 32rpx;
  display: grid;
  gap: 24rpx;
}

.sample-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}

.sample-desc {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
}

.sample-card {
  padding: 28rpx;
  border-radius: 26rpx;
  display: grid;
  gap: 20rpx;
  box-shadow: none;
}

.sample-card__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.sample-card__meta {
  display: grid;
  gap: 8rpx;
}

.sample-batch {
  font-size: 26rpx;
  font-weight: 600;
  color: #b07a48;
  letter-spacing: 2rpx;
}

.sample-product {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
}

.sample-status {
  font-size: 24rpx;
  color: #b08968;
  background: rgba(176, 122, 72, 0.12);
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
}

.sample-info {
  display: grid;
  gap: 6rpx;
  font-size: 24rpx;
  color: #475467;
}

.sample-summary {
  font-size: 24rpx;
  color: #334155;
  line-height: 1.6;
}

.sample-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.sample-tag {
  font-size: 22rpx;
  color: #8b5e34;
  background: rgba(176, 122, 72, 0.12);
  border: 1rpx solid rgba(176, 122, 72, 0.24);
  border-radius: 999rpx;
  padding: 8rpx 20rpx;
}

.sample-timeline {
  display: grid;
  gap: 16rpx;
}

.timeline-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #0f172a;
}

.timeline-item {
  border-left: 4rpx solid rgba(176, 122, 72, 0.4);
  padding-left: 20rpx;
  display: grid;
  gap: 6rpx;
}

.timeline-step {
  font-size: 24rpx;
  font-weight: 600;
  color: #8b5e34;
}

.timeline-detail {
  font-size: 24rpx;
  color: #475467;
  line-height: 1.5;
}

.timeline-meta {
  font-size: 22rpx;
  color: #94a3b8;
}

.feedback-dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.58);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 50;
}

.dialog-content {
  width: 640rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow: none;
}

.dialog-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 16rpx;
}

.dialog-input {
  width: 100%;
  background: rgba(15, 23, 42, 0.04);
  border-radius: 20rpx;
  padding: 20rpx 28rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(226, 232, 240, 0.6);
}

.dialog-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

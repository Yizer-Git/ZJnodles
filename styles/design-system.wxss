.ds-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 120rpx;
  box-sizing: border-box;
  background-color: #fbf7f0;
}



.ds-section {
  margin-bottom: 48rpx;
}

.ds-section__header {
  margin-bottom: 24rpx;
}

.ds-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 1rpx;
}

.ds-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
}

.ds-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.ds-card--frosted {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12rpx);
  border-color: rgba(148, 163, 184, 0.18);
}

.ds-card--accent {
  background: linear-gradient(135deg, #e6d6c0, #ddc4a2);
  color: #333333;
  box-shadow: 0 32rpx 80rpx rgba(204, 181, 156, 0.32);
  border: none;
}

.ds-card + .ds-card {
  margin-top: 24rpx;
}

.ds-grid {
  display: grid;
  gap: 20rpx;
}

.ds-grid--2 {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.ds-grid--3 {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.ds-grid--scroll {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.ds-grid--scroll::-webkit-scrollbar {
  display: none;
}

.ds-chip {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: #e6ded5;
  color: #333333;
  border: 1rpx solid #d8cec4;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.ds-chip--ghost {
  background: rgba(255, 255, 255, 0.82);
  color: #555555;
  border-color: rgba(200, 191, 182, 0.4);
}

.ds-pill {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  height: 68rpx;
  line-height: 1;
  font-size: 28rpx;
  text-align: center;
  font-weight: 500;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.ds-pill--primary {
  background: linear-gradient(135deg, #d8c4ab, #c2a88a);
  color: #fff9f1;
  box-shadow: 0 18rpx 50rpx rgba(194, 168, 138, 0.3);
}

.ds-pill--ghost {
  background: rgba(255, 255, 255, 0.88);
  color: #38220f;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.ds-stat-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 20rpx;
}

.ds-stat {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  text-align: left;
}

.ds-stat__value {
  font-size: 34rpx;
  font-weight: 600;
  color: #c2a88a;
}

.ds-stat__label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
}

.ds-shimmer {
  background: linear-gradient(90deg, #f0f4f8 0%, #e2e8f0 50%, #f0f4f8 100%);
  background-size: 400% 400%;
  animation: dsShimmer 1.4s infinite;
}

@keyframes dsShimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

.ds-empty {
  padding: 80rpx 24rpx;
  text-align: center;
  color: #887b6a;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx dashed rgba(148, 163, 184, 0.45);
}

.ds-motif {
  position: relative;
}

.ds-motif::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: inherit;
  border: 2rpx dashed rgba(147, 165, 76, 0.3);
  pointer-events: none;
}

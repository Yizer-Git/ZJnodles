page {
  background: #f8f8f8;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
    "Microsoft YaHei", sans-serif;
}

.ds-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.ds-section {
  margin-bottom: 48rpx;
}

.ds-section__header {
  margin-bottom: 24rpx;
}

.ds-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 1rpx;
}

.ds-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.ds-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.ds-card--frosted {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12rpx);
  border-color: rgba(148, 163, 184, 0.18);
}

.ds-card--accent {
  background: linear-gradient(145deg, #00bcd4, #00a3b5);
  color: #fff;
  box-shadow: 0 32rpx 80rpx rgba(0, 188, 212, 0.35);
  border: none;
}

.ds-card + .ds-card {
  margin-top: 24rpx;
}

.ds-grid {
  display: grid;
  gap: 20rpx;
}

.ds-grid--2 {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.ds-grid--3 {
  grid-template-columns: repeat(3, minmax(0, 1fr));
}

.ds-grid--scroll {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding-bottom: 16rpx;
}

.ds-grid--scroll::-webkit-scrollbar {
  display: none;
}

.ds-chip {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: rgba(0, 188, 212, 0.12);
  color: #00bcd4;
  border: 1rpx solid rgba(0, 188, 212, 0.24);
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.ds-chip--ghost {
  background: rgba(15, 23, 42, 0.05);
  color: #475467;
  border-color: rgba(148, 163, 184, 0.24);
}

.ds-pill {
  border-radius: 24rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: 500;
}

.ds-pill--primary {
  background: linear-gradient(135deg, #00bcd4, #00a3b5);
  color: #fff;
  box-shadow: 0 18rpx 50rpx rgba(0, 188, 212, 0.28);
}

.ds-pill--ghost {
  background: rgba(255, 255, 255, 0.88);
  color: #333333;
  border: 1rpx solid rgba(148, 163, 184, 0.18);
}

.ds-stat-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 20rpx;
}

.ds-stat {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  text-align: left;
}

.ds-stat__value {
  font-size: 34rpx;
  font-weight: 600;
  color: #00bcd4;
}

.ds-stat__label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.ds-shimmer {
  background: linear-gradient(90deg, #f0f4f8 0%, #e2e8f0 50%, #f0f4f8 100%);
  background-size: 400% 400%;
  animation: dsShimmer 1.4s infinite;
}

@keyframes dsShimmer {
  0% {
    background-position: 100% 0;
  }
  100% {
    background-position: -100% 0;
  }
}

.ds-empty {
  padding: 80rpx 24rpx;
  text-align: center;
  color: #999999;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx dashed rgba(148, 163, 184, 0.45);
}

.ds-motif {
  position: relative;
}

.ds-motif::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: inherit;
  border: 2rpx dashed rgba(0, 188, 212, 0.2);
  pointer-events: none;
}
